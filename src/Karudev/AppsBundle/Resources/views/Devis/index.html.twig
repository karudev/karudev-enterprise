{% extends "KarudevAppsBundle::layout.html.twig" %}

{% block body -%}
    <h1>Devis list</h1>

    <table class="records_list">
        <thead>
            <tr>
                <th>Id</th>
                <th>Projectname</th>
                <th>Description</th>
                <th>Datecreated</th>
                <th>Datelastupdated</th>
                <th>Amountht</th>
                <th>Amountttc</th>
                <th>Methodpayment</th>
                <th>Regulationprovided</th>
                <th>Deliverytime</th>
                <th>Deliverytimeunit</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for entity in entities %}
            <tr>
                <td><a href="{{ path('devis_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
                <td>{{ entity.projectName }}</td>
                <td>{{ entity.description }}</td>
                <td>{% if entity.dateCreated %}{{ entity.dateCreated|date('Y-m-d H:i:s') }}{% endif %}</td>
                <td>{% if entity.dateLastUpdated %}{{ entity.dateLastUpdated|date('Y-m-d H:i:s') }}{% endif %}</td>
                <td>{{ entity.amountHt }}</td>
                <td>{{ entity.amountTtc }}</td>
                <td>{{ entity.methodPayment }}</td>
                <td>{{ entity.regulationProvided }}</td>
                <td>{{ entity.deliveryTime }}</td>
                <td>{{ entity.deliveryTimeUnit }}</td>
                <td>
                <ul>
                    <li>
                        <a href="{{ path('devis_show', { 'id': entity.id }) }}">show</a>
                    </li>
                    <li>
                        <a href="{{ path('devis_edit', { 'id': entity.id }) }}">edit</a>
                    </li>
                </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

        <ul>
        <li>
            <a href="{{ path('devis_new') }}">
                Create a new entry
            </a>
        </li>
    </ul>
    {% endblock %}
