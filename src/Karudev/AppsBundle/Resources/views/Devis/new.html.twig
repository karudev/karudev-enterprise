{% extends "KarudevAppsBundle::layout.html.twig" %}
{% block body -%}
    <h2>Nouveau devis</h2>

    {{ form_start(form) }}
    <div class="row-fluid">
        <div class="span2">Nom du projet : </div><div class="span10">{{ form_widget(form.projectName,{'attr':{'class':'span10'}}) }}</div>
    </div>
     <div class="row-fluid">
        <div class="span2">Client : </div><div class="span10">{{ form_widget(form.clientId) }}</div>
    </div>
    <div class="row-fluid">
         <div class="span2">Description :</div><div class="span10">
            {{ form_widget(form.description,{'attr' : {'class' : 'span10' ,'rows' :20 }}) }}
         </div>
    </div>
     <div class="row-fluid">
         <div class="span2">DÃ©lai de livraison : </div><div class="span10">
            {{ form_widget(form.deliveryTime) }} {{ form_widget(form.deliveryTimeUnit) }}
         </div>
    </div>
    <div class="row-fluid">
         <div class="span2">Moyen de paiement</div><div class="span10">
          {{ form_widget(form.methodPaymentId) }}
         </div>
    </div>
    <div class="row-fluid">
         <div class="span2"></div><div class="span10">
            {{ form_widget(form.submit,{'attr' : {'class' : 'btn btn-success'}}) }}
         </div>
    </div>
    <div style="display:none">{{ form_rest(form) }}</div>
    {{ form_end(form) }}

        <ul class="record_actions">
    <li>
        <a href="{{ path('devis') }}">
            Back to the list
        </a>
    </li>
</ul>
{% endblock %}
